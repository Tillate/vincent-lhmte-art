{% extends 'base.html.twig' %}

{% block title %}Mes adresses - Vincent LHMTE Art{% endblock %}

{% block content %}
    <div class="address-container">
        <h1>Mes adresses</h1>
        <a href="{{ path('account') }}" class="link-underline">Retour à mon compte</a>
        <p>C'est dans cet espace que vous pourrez gérer vos adresses.</p>
        <hr>

        {% if app.user.addresses|length == 0 %}
        <p class="text-center">Vous n'avez pas encore ajouté d'adresse dans votre comptre client.</p>
        {% else %}
        <div class="address-card-container">
            {% for address in app.user.addresses %}
                <div class="address-card">

                    <h5>{{ address.name }}</h5>
                    <p>{{ address.address }},</p>
                    <p>{{ address.postal }} - {{ address.city }} - {{ address.country }}</p>

                    <div>
                        <a href="{{ path('account_address_edit', {'id':address.id}) }}">Modifier</a> 
                        |   
                        <a href="{{ path('account_address_delete', {'id':address.id}) }}">Supprimer</a>
                    </div>

                </div>
            {% endfor %}
        </div>
        {% endif %}
        <a href="{{ path('account_address_add')}}" class="admin-btn">Ajouter une adresse</a>
    </div>
{% endblock %}