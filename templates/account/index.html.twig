{% extends 'base.html.twig' %}

{% block title %}Mon compte - Vincent LHMTE Art{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
    <p class="admin-text">Vous êtes un administrateur : </p>
    <a href="/admin" class="admin-btn">Accéder au back-office</a>
    {% endif %}

    <p class="admin-text">
        Bonjour {{ app.user.firstname }} {{ app.user.lastname }} (vous n’êtes pas {{ app.user.firstname }} {{ app.user.lastname }} ? 
        <a href="{{ path('app_logout') }}" class="link-underline">Déconnexion</a>).
    </p>
    
    <div class="account-container">
     
        <div class="account-item">
            <a href="{{ path('account_password') }}">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de passe" width="32px" height="32px">
                Modifier mon mot de passe
            </a>
        </div>
        
        <div class="account-item">
            <a href="{{ path('account_address') }}">
                <img src="{{ asset('assets/img/address.png') }}" alt="Gérer mes adresses" width="32px" height="32px">
                Gérer mes adresses
            </a>
        </div>
    
        <div class="account-item">
            <a href="{{ path('account_order') }}">
                <img src="{{ asset('assets/img/purchase.png') }}" alt="Mes commandes" width="32px" height="32px">
                Mes commandes
            </a>
        </div>
    
    </div>

{% endblock %}
