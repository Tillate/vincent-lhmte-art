<body>
    <header>
        <nav>
            <ul class="navbar">
                <li>
                    <a href="{{ path('home') }}">Bio</a>
                </li>
                <li>
                    <a href="{{ path('products') }}">Galerie</a>
                </li>
                <li>
                    <a href="{{ path('exhibitions') }}">Expositions</a>
                </li>
                <li>
                    <a href="{{ path('contact') }}">Contact</a>
                </li>
            </ul>
        </nav>
        <div class="cart">
            {% if app.user %}
                <a href="{{ path('account') }}">Mon compte <small>({{app.user.firstname}})</small></a> | <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('register') }}">Inscription</a>
            {% endif %}
            <a href="{{ path('cart') }}">
                <img src="{{ asset('assets/img/shopping-bag.png') }}" class="cart-icon" alt="Mon panier">
            </a>
        </div>
    </header>
    <div class="title"><a href="">VINCENT LHMTE ART</a></div>

    <main role="main">

